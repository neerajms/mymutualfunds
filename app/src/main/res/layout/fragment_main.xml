<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".ui.FundsListFragment"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.CardView
        android:id="@+id/net_worth_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/net_worth_card_height"
        app:cardCornerRadius="0dp"
        android:padding="@dimen/net_worth_card_padding"
        app:cardElevation="@dimen/net_worth_cardview_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/net_worth_heading_top_padding"
                android:gravity="center_horizontal"
                android:text="@string/net_worth"
                android:layout_weight="0"
                android:textSize="@dimen/net_worth_heading_size" />

            <TextView
                android:id="@+id/net_worth_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/net_worth_text_size"
                android:gravity="center"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/funds_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
