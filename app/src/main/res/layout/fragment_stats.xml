<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_net_worth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/net_worth_card_view_top_margin"
        android:layout_marginLeft="@dimen/cardview_layout_margin"
        android:layout_marginRight="@dimen/cardview_layout_margin"
        android:layout_marginBottom="@dimen/cardview_layout_margin"
        android:minHeight="@dimen/cardview_minheight"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/net_worth_heading_top_padding"
                android:text="@string/net_worth"
                android:textSize="@dimen/net_worth_heading_size" />

            <TextView
                android:id="@+id/net_worth_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/net_worth_text_size" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>