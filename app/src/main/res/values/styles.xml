<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fundName">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/fund_title</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="navValue">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/fund_title</item>
    </style>

    <style name="suggestions_text_style">
        <item name="android:layout_marginLeft">@dimen/text_view_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/text_view_layout_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/suggestion_text_size</item>
        <item name="android:minHeight">@dimen/suggestions_list_item_min_height</item>
    </style>

    <style name="screenLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="disconnectedIndicatorStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/offline_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/disconnected_indicator_top_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#E6006064</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_detailTextAppearance">@style/customText</item>
        <item name="sv_buttonText">Got It</item>
        <item name="sv_tintButtonColor">false</item>
    </style>
    
    <style name="customText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
