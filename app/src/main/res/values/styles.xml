<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FundName">
        <item name="android:textSize">@dimen/fund_title</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
    </style>

    <style name="NavValue">
        <item name="android:textSize">@dimen/nav_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:minWidth">@dimen/fund_nav_minWidth</item>
    </style>

    <style name="SuggestionsTextStyle">
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/suggestion_text_size</item>
        <item name="android:minHeight">@dimen/suggestions_list_item_min_height</item>
    </style>

    <style name="ScreenLayoutStyle">
        <item name="android:maxWidth">@dimen/layout_max_width</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="DisconnectedIndicatorStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/offline_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/disconnected_indicator_top_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#E6006064</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_detailTextAppearance">@style/ShowcaseCustomText</item>
        <item name="sv_buttonText">Got It</item>
        <item name="sv_tintButtonColor">false</item>
    </style>

    <style name="ShowcaseCustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatsCardView">
        <item name="android:layout_marginBottom">@dimen/cardview_layout_margin</item>
        <item name="android:layout_marginLeft">@dimen/cardview_layout_margin</item>
        <item name="android:layout_marginStart">@dimen/cardview_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/cardview_layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/cardview_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="NetWorthLabel">
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textSize">@dimen/net_worth_heading_size</item>
    </style>

    <style name="NetWorthAmount">
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textSize">@dimen/net_worth_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NetWorthChange">
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="GraphStyle">
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:minHeight">@dimen/historical_graph_height</item>
    </style>

    <style name="NetWorthAmountWidget">
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/net_worth_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NetWorthAmountLabelWidget">
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/net_worth_text_size</item>
    </style>

    <style name="WidgetLinearLayout">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/margin_8dp</item>
    </style>

    <style name="SearchResultsListItem">
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:textSize">@dimen/search_result_listitem_textsize</item>
    </style>

    <style name="SIgnInText">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">96dp</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
